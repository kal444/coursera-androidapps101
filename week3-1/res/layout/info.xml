<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView android:id="@+id/name1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/author1_name"
              android:textSize="25sp"
              android:layout_centerHorizontal="true"
              android:paddingTop="8dp"
              android:paddingBottom="8dp"
            />

    <ImageView android:id="@+id/photo1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/name1"
               android:src="@drawable/tim"
               android:contentDescription="@string/author1_photo_desc"
               android:layout_centerHorizontal="true"
               android:paddingBottom="8dp"
            />

    <ScrollView android:id="@+id/desc1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/photo1"
            >
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/author1_desc"
                  android:textSize="22sp"
                />
    </ScrollView>

</RelativeLayout>
