<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
        >
    <WebView android:id="@+id/jabberWebView"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
            >
    </WebView>

    <Button android:id="@+id/wikiButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wikiButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:onClick="wikipedia"
            />

    <Button android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/imageButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:onClick="bandersnatch"
            />

</RelativeLayout>

